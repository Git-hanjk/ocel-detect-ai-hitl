{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "llm_verify.v2.schema.json",
  "title": "VerifyResponse v2",
  "type": "object",
  "required": ["schema_version", "verdict", "confidence", "reasons", "evidence_used", "next_questions"],
  "properties": {
    "schema_version": { "type": "string", "const": "verify.v2" },
    "verdict": { "type": "string", "enum": ["confirm", "uncertain", "reject", "inconclusive"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "reasons": { "type": "array", "items": { "type": "string" } },
    "evidence_used": { "type": "array", "items": { "type": "string" } },
    "cautions": { "type": "array", "items": { "type": "string" } },
    "priority_hint": { "type": "string", "enum": ["high", "medium", "low"] },
    "next_questions": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
